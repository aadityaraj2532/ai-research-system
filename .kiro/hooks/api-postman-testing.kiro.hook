{
  "enabled": true,
  "name": "API Postman Testing",
  "description": "Monitors Django API source code changes and automatically runs Postman collection tests to validate functionality",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "*.py",
      "requirements.txt",
      "requirements-basic.txt",
      "manage.py",
      "*/models.py",
      "*/views.py",
      "*/serializers.py",
      "*/urls.py",
      "*/services.py",
      "*/settings.py",
      "AI_Research_System.postman_collection.json"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Django API source code or configuration has been modified. Please retrieve the contents of the .postman.json file. If the file does not exist or is empty, create a Postman collection for the API. If it exists, get the collection ID and run the collection, showing me the results and propose fixes for any errors found."
  }
}